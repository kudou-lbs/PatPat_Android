<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Patpat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f1a6a6</item>
        <item name="colorPrimaryVariant">#ff6666</item>
        <item name="colorOnPrimary">#0066ff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
<!--        <item name="colorOnSecondary">@color/black</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <!--状态栏半透明-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>
    <style name="TabLayoutSmallTextStyle">
        <item name="android:textSize">@dimen/tab_small_text_size</item>
    </style>
    <style name="RecyclerViewItemTitleStyle">
        <item name="android:textSize">@dimen/recycler_user_nickname_size</item>
        <item name="color">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>