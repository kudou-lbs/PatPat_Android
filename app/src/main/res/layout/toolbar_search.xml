<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:gravity="center_vertical"
    android:background="@color/white">
    
    <ImageView
        android:id="@+id/search_return"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/button_back"
        android:layout_margin="@dimen/toolbar_icon_margin"
        android:scaleType="centerInside"/>

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_edit_text_height"
        android:layout_weight="1"
        android:paddingLeft="@dimen/toolbar_edit_text_padding_left"
        android:background="@drawable/shape_search"
        android:hint="请输入搜索内容"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="@dimen/toolbar_search_button_width"
        android:layout_height="@dimen/toolbar_search_button_height"
        android:layout_margin="@dimen/toolbar_edit_text_padding_left"
        android:background="@drawable/button_search"
        android:gravity="center"
        android:text="搜索"
        android:textSize="@dimen/toolbar_search_button_text_size"
        android:textColor="@color/hot_color"/>

</LinearLayout>