<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.message.MessageFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_search_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:text="消息"
            android:textSize="@dimen/tab_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/toolbar_icon_margin"
            android:layout_weight="1"
            android:background="#00000000">


        </TextView>

        <ImageView
            android:id="@+id/toolbar_personal_home"
            android:layout_margin="@dimen/toolbar_icon_margin"
            android:layout_gravity="center"
            android:src="@drawable/icon_default"
            android:layout_width="@dimen/toolbar_icon_diameter"
            android:layout_height="@dimen/toolbar_icon_diameter"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_background"/>

</LinearLayout>