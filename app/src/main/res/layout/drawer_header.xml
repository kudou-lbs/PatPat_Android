<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_background_custom"
    android:paddingTop="@dimen/drawer_padding_top"
    android:paddingBottom="@dimen/drawer_padding_bottom">

    <ImageView
        android:id="@+id/header_avatar"
        android:layout_width="@dimen/drawer_icon_width"
        android:layout_height="@dimen/drawer_icon_width"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="点击头像登录"
        android:textColor="@color/white"
        android:textSize="@dimen/drawer_nickname_size"
        app:layout_constraintLeft_toLeftOf="@id/header_avatar"
        app:layout_constraintTop_toBottomOf="@id/header_avatar" />

    <TextView
        android:id="@+id/header_follow_and_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这个人很懒，什么都没有写"
        android:textColor="@color/white"
        android:textSize="@dimen/drawer_follow_and_fans_size"
        app:layout_constraintLeft_toLeftOf="@id/header_nickname"
        app:layout_constraintTop_toBottomOf="@id/header_nickname" />


</androidx.constraintlayout.widget.ConstraintLayout>