<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recycler_item_margin">

    <ImageView
        android:id="@+id/item_user_avatar"
        android:layout_width="@dimen/recycler_icon_width"
        android:layout_height="@dimen/recycler_icon_width"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recycler_text_margin_icon"
        android:layout_marginTop="@dimen/recycler_text_padding_top_and_bottom"
        app:layout_constraintStart_toEndOf="@+id/item_user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/recycler_user_nickname_size"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/item_user_id_and_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recycler_text_padding_top_and_bottom"
        app:layout_constraintStart_toStartOf="@+id/item_user_nickname"
        app:layout_constraintBottom_toBottomOf="@id/item_user_avatar" />

    <Button
        android:id="@+id/item_user_button_followed"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/follow_button_height"
        android:text="关注"
        android:textSize="@dimen/follow_button_text_size"
        android:background="@drawable/shape_botton_follow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>