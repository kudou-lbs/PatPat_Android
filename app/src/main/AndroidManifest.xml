<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lbs.patpat">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 读文件权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:name=".global.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/patpat"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/patpat"
        android:supportsRtl="true"
        android:theme="@style/Theme.Patpat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.login_register.ModifyPasswdActivity"
            android:exported="false" />
        <activity
            android:name=".CollectActivity"
            android:exported="false" />
        <activity
            android:name=".FollowAndFansActivity"
            android:exported="false" />
        <activity
            android:name=".ModifyInfoActivity"
            android:exported="true" />
        <activity
            android:name=".PostWriteActivity"
            android:exported="true" />
        <activity
            android:name=".ForumActivity"
            android:exported="false" />
        <activity
            android:name=".webViewActivity"
            android:exported="false" />
        <activity
            android:name=".PersonalActivity"
            android:exported="true" />
        <activity
            android:name=".SearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login_register.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login_register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>